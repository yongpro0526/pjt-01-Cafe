<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.miniproject.cafe.Mapper.OrderMapper">

    <resultMap id="orderMap" type="com.miniproject.cafe.VO.OrderVO">
        <id     property="orderId"      column="order_id" />
        <result property="uId"          column="u_id" />
        <result property="orderStatus"  column="order_status" />
        <result property="totalPrice"   column="total_price" />
        <result property="orderType"    column="pickup_method" />
        <result property="orderTime"    column="order_time" />
        <result property="totalQuantity" column="total_quantity" />
        <result property="storeName"    column="store_name" />
        <result property="dailyOrderNum" column="daily_order_num" />

        <collection property="orderItemList" ofType="com.miniproject.cafe.VO.OrderItemVO">
            <id     property="orderItemId" column="order_detail_id"/>
            <result property="orderId"     column="order_id"/>
            <result property="menuId"      column="menu_id"/>
            <result property="menuItemName" column="menu_name"/>
            <result property="quantity"    column="item_amount"/>
        </collection>
    </resultMap>

    <select id="findOrdersByStore" resultMap="orderMap">
        SELECT
            o.order_id,
            o.u_id,
            o.order_status,
            o.total_price,
            o.pickup_method,
            o.order_time,
            o.store_name,
            o.total_quantity,

            -- 일일 주문 번호
            ROW_NUMBER() OVER (PARTITION BY DATE(o.order_time) ORDER BY o.order_time ASC) as daily_order_num,

            -- 상세 아이템 정보
            od.order_detail_id,
            od.menu_id,
            m.menu_name,
            od.amount AS item_amount

        FROM orders o
                 LEFT JOIN order_detail od ON o.order_id = od.order_id
                 LEFT JOIN menu m ON od.menu_id = m.menu_id

        WHERE o.store_name = #{storeName}
          AND o.order_status = '주문접수'  ORDER BY o.order_time DESC
    </select>

    <insert id="insertOrder" parameterType="com.miniproject.cafe.VO.OrderVO"
            useGeneratedKeys="true" keyProperty="orderId">
        INSERT INTO orders (
            u_id,
            order_status,
            total_price,
            pickup_method,
            order_time,
            total_quantity,
            store_name
        )
        VALUES (
                   #{uId},
                   #{orderStatus},
                   #{totalPrice},
                   #{orderType},
                   NOW(),
                   #{totalQuantity},
                   #{storeName}
               )
    </insert>

    <insert id="insertOrderDetails" parameterType="java.util.List">
        INSERT INTO order_detail (
        order_id,
        menu_id,
        amount
        )
        VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.orderId},
            #{item.menuId},
            #{item.quantity}
            )
        </foreach>
    </insert>

    <update id="updateOrderStatus">
        UPDATE orders
        SET order_status = #{status}
        WHERE order_id = #{orderId}
    </update>

</mapper>